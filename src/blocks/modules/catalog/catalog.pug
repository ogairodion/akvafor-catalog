            class: "effect--show"
        },
        {
            id: "9",
            title: "ЛОС",
            text: "Блочно-модульные установки для очистки хозяйственно-бытовых и промышленных сточных вод.",
            class: "effect--right"
        }
    ]
section.catalog.bg--violet-light.parallax__container#catalog
    .circle
        picture
            source(srcset="img/effects/circle.png" type="image/webp")
            source(srcset="img/effects/circle.png" type="image/png")
            img.lazy(src="img/effects/circle.png" alt="")
    .l-default
        h2.catalog__title.title.title--h2.effect.effect--left Каталог
        .catalog__items
            each catalog_item in catalog_items 
                a.catalog__item.slide-id.effect(href="#popup-slider" class=catalog_item.class data-id=catalog_item.id data-fancybox) 
                    .catalog__item-img
                        img.lazy(src="img/svg/catalog/" + catalog_item.id + ".svg", alt="")
                    .catalog__item-title= catalog_item.title
                    .catalog__item-text= catalog_item.text
                    .catalog__item-link Подробнее
